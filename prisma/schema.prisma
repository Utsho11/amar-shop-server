generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                 String      @id @default(uuid())
  role               UserRole
  email              String      @unique
  password           String
  needPasswordChange Boolean     @default(true)
  status             UserStatus? @default(ACTIVE)
  isDeleted          Boolean?    @default(false)
  createdAt          DateTime?   @default(now())
  updatedAt          DateTime?   @updatedAt
  Admin              Admin?
  Customer           Customer?
  Vendor             Vendor?

  @@map("users") // Maps the model to the "users" table in the database
}

model Admin {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  phone     String?
  image     String?
  isDeleted Boolean?  @default(false)
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt

  user User @relation(fields: [email], references: [email])

  @@map("admins") // Maps the model to the "users" table in the database
}

model Customer {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  image     String?
  phone     String?
  isDeleted Boolean?  @default(false)
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  Order     Order[]
  Review    Review[]
  Cart      Cart[]
  Follow    Follow[]

  user User @relation(fields: [email], references: [email])

  @@map("customers") // Maps the model to the "users" table in the database
}

model Vendor {
  id        String    @id @default(uuid())
  name      String
  email     String    @unique
  image     String?
  phone     String?
  isDeleted Boolean?  @default(false)
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
  Shop      Shop[]
  user      User      @relation(fields: [email], references: [email])

  @@map("vendors") // Maps the model to the "users" table in the database
}

model Shop {
  id            String    @id @default(uuid())
  vendorEmail   String
  name          String
  logoUrl       String?
  description   String?   @db.Text
  isDeleted     Boolean   @default(false)
  isBlacklisted Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  Product       Product[]
  Follow        Follow[]
  // Relations
  vendor        Vendor    @relation(fields: [vendorEmail], references: [email])

  @@map("shops") // Maps this model to the "shops" table in the database
}

model Category {
  id          String    @id @default(uuid())
  name        String    @unique @db.VarChar(50)
  description String?   @db.Text
  logoUrl     String?
  isDeleted   Boolean   @default(false)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  Product     Product[]

  @@map("categories") // Maps this model to the "categories" table in the database
}

model Product {
  id             String   @id @default(uuid())
  shopId         String
  name           String   @db.VarChar(150)
  description    String?  @db.Text
  price          String
  categoryId     String
  discount       String
  inventoryCount String
  imageUrls      String
  isDeleted      Boolean  @default(false)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  // Relations
  shop      Shop        @relation(fields: [shopId], references: [id])
  category  Category    @relation(fields: [categoryId], references: [id])
  OrderItem OrderItem[]
  Review    Review[]

  @@map("products") // Maps this model to the "products" table in the database
}

model Order {
  id            String        @id @default(uuid())
  customerEmail String
  status        OrderStatus   @default(PENDING)
  totalAmount   Decimal       @db.Decimal(10, 2)
  paymentMethod String
  paymentStatus PaymentStatus @default(PENDING)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  // Relations
  customer    Customer      @relation(fields: [customerEmail], references: [email])
  OrderItem   OrderItem[]
  Transaction Transaction[]

  @@map("orders") // Maps this model to the "orders" table in the database
}

model OrderItem {
  id        String  @id @default(uuid())
  orderId   String
  productId String
  quantity  Int
  price     Decimal @db.Decimal(10, 2)

  // Relations
  order   Order   @relation(fields: [orderId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("order_items") // Maps this model to the "order_items" table in the database
}

model Review {
  id            String   @id @default(uuid())
  productId     String
  customerEmail String
  rating        Int
  comment       String?  @db.Text
  createdAt     DateTime @default(now())

  // Relations
  product  Product  @relation(fields: [productId], references: [id])
  customer Customer @relation(fields: [customerEmail], references: [email])

  @@map("reviews") // Maps this model to the "reviews" table in the database
}

model Cart {
  id            String   @id @default(uuid())
  customerEmail String
  productId     String
  quantity      Int
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  // Relations

  Customer   Customer? @relation(fields: [customerEmail], references: [id])
  customerId String?

  @@map("cart") // Maps this model to the "cart" table in the database
}

model Follow {
  id            String   @id @default(uuid())
  customerEmail String
  shopId        String
  createdAt     DateTime @default(now())

  // Relations
  customer Customer @relation(fields: [customerEmail], references: [email])
  shop     Shop     @relation(fields: [shopId], references: [id])

  @@map("follows") // Maps this model to the "follows" table in the database
}

model Coupon {
  id              String   @id @default(uuid())
  code            String   @unique
  discountPercent String
  validFrom       DateTime
  validTo         DateTime
  createdAt       DateTime @default(now())

  @@map("coupons") // Maps this model to the "coupons" table in the database
}

model Transaction {
  id            String        @id @default(uuid())
  orderId       String
  transactionId String        @unique
  amount        Decimal       @db.Decimal(10, 2)
  paymentStatus PaymentStatus @default(PENDING)
  createdAt     DateTime      @default(now())

  // Relations
  order Order @relation(fields: [orderId], references: [id])

  @@map("transactions") // Maps this model to the "transactions" table in the database
}

// Enum for role validation
enum UserRole {
  ADMIN
  VENDOR
  CUSTOMER
}

enum UserStatus {
  ACTIVE
  BLOCKED
  DELETED
}

enum OrderStatus {
  PENDING
  COMPLETED
  CANCELLED
}

enum PaymentStatus {
  PENDING
  PAID
  FAILED
}
